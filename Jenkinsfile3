pipeline {
    agent any
    
    stages {
        stage('Build and run Nginx container') {
            steps {
                script {
                    // Запуск контейнера Nginx
                    docker run -d -p 8099:80 --name mynginx \
                    -v ./index.html:/usr/share/nginx/html/index.html \
                    nginx:alpine

                    )
                }
            }
        }
    }
}
